set nocompatible
" Default encoding: UTF-8.
set encoding=utf-8 fileencodings=

set nowrap
set expandtab
set textwidth=79
set shiftwidth=2
set softtabstop=2

set scrolloff=5

set ignorecase

set hlsearch

syntax on

set background=dark

set lsp=0

set ruler
set cmdheight=1
set laststatus=2
set statusline=%F%h%m%w%r\ %Y\ (%{&ff})%=\ %c%V,\ %l/%L\ (%P)

set backspace=2 

set history=1000

set mouse=a

